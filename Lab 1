			L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
				attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
			}).addTo(map);
		
			L.marker([35.66036651018742, 139.69940115950655]).addTo(map)
				.bindPopup("Genki Sushi - a cheap and good conveyor belt sushi resturant.");
				
			L.marker([35.66121543467788, 139.69821374382948]).addTo(map)
				.bindPopup("Adores Shibuya - video acrade with fun photobooths for pictures.");
		
			L.marker([35.66105455076822, 139.6973820170712]).addTo(map)
				.bindPopup("Cat Cafe Mocha - cat cafe for furry snuggles.");
				
			L.marker([35.66239697807741, 139.86133579435545]).addTo(map)
				.bindPopup("Hotel Lumiere - a cute hotel with three beds (which was hard to find!) for my mom, sister, and I.");
				
			L.marker([35.66377824212148, 139.86149918469388]).addTo(map)
				.bindPopup("Mos Burger - a tasty Japanese burger chain");
				
