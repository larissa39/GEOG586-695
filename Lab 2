<div id="mapid" class="center"></div>
	
<script type= "application/javascript">
	var mymap = L.map('mapid').setView([35.48452106000071, 139.84813], 10);
		
	L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
	    attribution: 'Tiles &copy; Esri &mdash; Source: Esri, i-cubed, USDA, USGS, AEX, GeoEye, Getmapping, Aerogrid, IGN, IGP, UPR-EGP, and the GIS User Community'
	}).addTo(mymap);
			
	L.geoJSON(locationsInTokyo, {
		onEachFeature: Popups
	}).addTo(mymap);
	
	L.geoJSON(locationsNotInTokyo, {
		onEachFeature: Popups
	}).addTo(mymap);
	
	 var locationsStyleInTokyo = {
            radius: 10,
            fillColor: "FloralWhite",
            color: "#000",
            weight: 1,
            opacity: 1,
            fillOpacity: 0.5
            };
	    
	 var locationsStyleInTokyo = {
            radius: 10,
            fillColor: "FireBrick",
            color: "#000",
            weight: 1,
            opacity: 1,
            fillOpacity: 0.5
            };
	
	 L.geoJSON(locationsinTokyo, {
            pointToLayer: function (feature, latlng) {
                return L.circleMarker(latlng, locationsStyleInTokyo);
            }}).addTo(map);
	    
	 L.geoJSON(locationsNotInTokyo, {
            pointToLayer: function (feature, latlng) {
                return L.circleMarker(latlng, locationsStyleNotInTokyo);
            }}).addTo(map);
	    
					
</script>	
		
